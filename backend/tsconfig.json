{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "WebWorker"],
    "types": ["@cloudflare/workers-types"],

    "strict": true,
    "noEmit": true,

    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
